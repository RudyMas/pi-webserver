{% extends "base.twig" %}

{% block head %}
    {{ parent() }}
{% endblock %}
{% block title %}Raspberry Pi CMS - Overview{% endblock %}
{% block css %}
    {{ parent() }}
    <link href="{{ BASE_URL }}/node_modules/open-iconic/font/css/open-iconic-bootstrap.min.css" rel="stylesheet">
    <link href="{{ BASE_URL }}/public/css/switch.css" rel="stylesheet">
    <link href="{{ BASE_URL }}/public/css/pi_general.css" rel="stylesheet">
{% endblock %}
{% block container %}
    {% include '_header.twig' %}
    <br>
    <div class="row">
        <div class="col-6 offset-3">
            <table class="table table-striped table-bordered">
                <caption>List of Websites</caption>
                <thead class="thead-dark">
                <tr>
                    <th style="width: 10%" class="text-center">#</th>
                    <th style="width: 45%">Website</th>
                    <th style="width: 15%" class="text-center">Active</th>
                    <th style="width: 15%" class="text-center">SSL support</th>
                    <th style="width: 15%" class="text-center">
                        <button type="button" class="btn-sm btn-default" data-toggle="modal" data-target="#modalAdd">
                            <span class="oi oi-plus" title="Add Website"></span>
                        </button>
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for website in websites %}
                    <tr>
                        <td class="text-center">{{ website.id }}</td>
                        <td>{{ website.name }}</td>
                        <td class="text-center">
                            <span class="oi {% if website.active %}oi-check emvc-badge-outline-success{% else %}oi-x emvc-badge-outline-danger{% endif %}"
                                  title="Check"></span>
                        </td>
                        <td class="text-center">
                            <span class="oi {% if website.https %}oi-check emvc-badge-outline-success{% else %}oi-x emvc-badge-outline-danger{% endif %}"
                                  title="Check"></span>
                        </td>
                        <td class="text-center">
                            <button class="btn-sm btn-default" data-toggle="modal" data-target="#modalEdit">
                                <span class="oi oi-pencil" title="Edit Website"></span>
                            </button>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    {% include '_footer.twig' %}
    <div class="modal fade" tabindex="-1" role="dialog" id="modalAdd">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add New Website</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form action="{{ BASE_URL }}/websites/add" method="post">
                    <div class="modal-body">
                        <div class="form-group row">
                            <label for="website" class="col-3 col-form-label">URL (core)</label>
                            <div class="col-9">
                                <input type="text" class="form-control" id="website" name="website" required>
                            </div>
                        </div>
                            <div class="form-group row">
                            <label for="password" class="col-3 col-form-label">Password (FTP)</label>
                            <div class="col-9">
                                <input type="password" class="form-control" id="password" name="password" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="confirmPassword" class="col-3 col-form-label">Confirm Password</label>
                            <div class="col-9">
                                <input type="password" class="form-control" id="confirmPassword" name="confirmPassword"
                                       required>
                            </div>
                        </div>
                        <div class="form-check row">
                            <div class="col-12 switch">
                            <span class="switch switch-sm">
                                <input type="checkbox" class="form-check-input switch" id="https" name="https">
                                <label for="https" class="form-check-label">HTTPS</label>
                            </span>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Save changes</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="modal fade" tabindex="-1" role="dialog" id="modalEdit">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Website</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Modal body text goes here.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary">Save changes</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}