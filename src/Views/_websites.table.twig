<div class="content">
    <table class="table table-striped table-bordered background">
        <thead class="thead-dark">
        <tr>
            <th style="width: 10%" class="text-center">#</th>
            <th style="width: 45%">Website</th>
            <th style="width: 15%" class="text-center">Active</th>
            <th style="width: 15%" class="text-center">SSL support</th>
            <th style="width: 15%" class="text-center">
                <button type="button" class="btn-sm btn-default" data-toggle="modal" data-target="#modalAdd">
                    <span class="oi oi-plus" title="Add Website"></span>
                </button>
            </th>
        </tr>
        </thead>
        <tbody>
        {% for website in websites %}
            <tr>
                <td class="text-center">{{ website.id }}</td>
                <td>{{ website.name }}</td>
                <td class="text-center">
                            <span class="oi {% if website.active %}oi-check emvc-badge-outline-success{% else %}oi-x emvc-badge-outline-danger{% endif %}"
                                  title="Check"></span>
                </td>
                <td class="text-center">
                            <span class="oi {% if website.https %}oi-check emvc-badge-outline-success{% else %}oi-x emvc-badge-outline-danger{% endif %}"
                                  title="Check"></span>
                </td>
                <td class="text-center">
                    <button class="btn-sm btn-default" data-toggle="modal" data-target="#modalEdit">
                        <span class="oi oi-pencil" title="Edit Website"></span>
                    </button>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>